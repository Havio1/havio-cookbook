{
  "schemaVersion": 1,
  "id": "hcookbook",
  "version": "${version}",

  "name": "Havio's Cookbook",
  "description": "Adds vanilla-like foods and recipes to Minecraft.",
  "authors": [
    "Havio"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.havio.magmacookies.MagmaCookies"
    ],
    "client": [
      "net.havio.magmacookies.MagmaCookiesClient"
    ]
  },
  "mixins": [
    "magmacookies.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
